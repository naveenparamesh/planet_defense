<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".main"
    android:id="@+id/menu"
    android:background="@drawable/hd_wallpaper_19561">


    <ImageView
        android:src="@drawable/planet_defender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:id="@+id/image_view"
        android:layout_centerHorizontal="true"
        android:textColor="#5e3da4"
        android:layout_alignParentTop="false" />

    <Button
        android:text="@string/start"
        android:width="256dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_button"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/image_view"
        android:layout_alignLeft="@+id/instructions_button"
        android:layout_alignStart="@+id/instructions_button"
        android:layout_marginTop="100dp" />

    <Button
        android:text="@string/instructions"
        android:width="256dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instructions_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/start_button" />



    <Button
        android:text="@string/exit"
        android:width="256dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exit_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/instructions_button" />


</RelativeLayout>
